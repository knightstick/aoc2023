  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "ruby_lsp",
      "name": "Debug script",
      "request": "launch",
      "program": "ruby ${file}"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug spec file",
      "request": "launch",
      "program": "bundle exec rspec ${relativeFile}"
    },
    {
      "type": "ruby_lsp",
      "name": "Debug all specs",
      "request": "launch",
      "program": "bundle exec rspec",
      "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "type": "ruby_lsp",
      "name": "Attach debugger",
      "request": "attach"
    },
    {
      "type": "ruby_lsp",
      "name": "Run CLI",
      "request": "launch",
      "program": "./bin/ruby_aoc_2023 day --verbose",
    }
  ]
}
